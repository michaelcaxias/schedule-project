{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "trybe-frontend",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": ["react", "sonarjs"],
    "rules": {
      "sonarjs/cognitive-complexity": ["error", 20],
      "react/no-unescaped-entities": "off"
    }
  }
